<mujoco model="panda scene">
    <compiler angle="radian" meshdir="./meshes/" autolimits="true"/>

    <option integrator="implicitfast" noslip_iterations="3" timestep="0.002" cone="pyramidal">
      <flag multiccd="enable" warmstart="enable"/>
    </option>

    <include file="panda_mocap.xml"/>
  
    <statistic center="0.3 0 0.4" extent="1"/>
  
    <visual>
      <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
      <rgba haze="0.15 0.25 0.35 1"/>
      <global azimuth="120" elevation="-20"/>
    </visual>
  
    <asset>
      <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
      <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
      <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>
  
    <worldbody>
      <light pos="1 1 1.5" dir="-1 -1 -1" directional="true"/>
      <camera name="watching" pos="1.669 -1.154 1.019" xyaxes="0.644 0.765 0.000 -0.250 0.210 0.945"/>

      <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
  
      <body name="floor" pos="0. 0. 0.">
        <!-- <site name="target" pos="0.4 0.0 0.2" size=".02 .02 .02" rgba="1 0.0 0.0 1" type="sphere"/> -->
      </body>

      <body name="board" pos="0.5 0 0.005">
        <joint type="free" name="board_joint" />
        <geom name="board_left" type="box" pos="0 0.2 0" size="0.2 0.195 0.0025" rgba="0.5 0.5 0.5 1"/>
        <geom name="board_right" type="box" pos="0 -0.2 0" size="0.2 0.195 0.0025" rgba="0.5 0.5 0.5 1"/>
        <geom name="board_middle" type="box" pos="0 0 0" size="0.18 0.005 0.0025" rgba="0.5 0.5 0.5 1"/>
        <geom name="board_put" type="box" pos="-0.19 0 0" size="0.01 0.005 0.0025" rgba="0.5 0.5 0.5 1"/> 
        <site name="board_site" pos="0.18 0 0" size="0.005 0.005 0.05" rgba="1 0 0 1" type="sphere"/>
      </body>

      <body name="peg" pos="0.9 0 0.005">
        <geom name="peg_geom" type="box" size="0.01 0.005 0.005" rgba="0.2 0.2 1 1"/>
        <site name="peg_left_site" pos="-0.01 0 0" size="0.005 0.005 0.05" rgba="1 0 0 1"/>
      </body>
  
    </worldbody>

  </mujoco>
  